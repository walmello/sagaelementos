<style>
    h1 {
        font-size: 2rem;
        text-transform: uppercase;
        text-align: center;
        animation: fade-in 1s;
        animation-fill-mode: forwards;
        animation-timing-function: ease-in-out;
    }
    
    @keyframes fade-in {
        from {
            opacity: 0%;
        }
        to {
            opacity: 100%;
        }
    }
    
    @keyframes fade-in-grow {
        0% {
            opacity: 0%;
            transform: scale(0);
        }
        75% {
            opacity: 100%;
            transform: scale(1.1);
        }
        100% {
            transform: scale(1);
            opacity: 100%;
        }
    }
    
    h1 span {
        font-size: 3rem;
        background: #bf2626;
        background: linear-gradient(90deg,rgba(191, 38, 38, 1) 0%, rgba(222, 181, 31, 1) 37%, rgba(255, 255, 255, 1) 70%, rgba(83, 237, 211, 1) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    
    .to-r {
        text-align: right;
    }
    
    .trow {
        width: 100%;
    }
    
    .grid {
        display: grid;
        grid-template-columns: 0.3fr 1fr 1fr;
    }
    
    .table-title {
        font-size: 1rem;
        opacity: 0;
        text-transform: uppercase;
        font-weight: 600;
        padding: 1rem;
        padding-bottom: 1rem;
        animation: fade-in 1s;
        animation-fill-mode: forwards;
        animation-timing-function: ease-in-out;
        animation-delay: 0.5s;
    }
    
    .team {
        padding: 1rem;
        border-radius: 8px;
        font-size: 1.2rem;
        font-weight: 500;
        animation: fade-in-grow 1s;
        animation-fill-mode: forwards;
        animation-delay: calc(var(--stagger) / 16);
        animation-timing-function: ease-in-out;
        opacity: 0;
    }
    
    .team:hover {
        filter: brightness(1.2);
    }

    .icon {
        display: flex;
        align-items: center;
        justify-content: center;   
    }
    
    .Fogo {
        background-color: #bf2626;
        border: 1px solid #ff0000;
    }
    .Terra {
        background-color: #b87537;
        border: 1px solid #ff9100;
        color: black;
    }
    .Ar {
        background-color: #bbbbbb;
        border: 1px solid #ffffff;
        color: black;
    }
    .Agua {
        background-color: #266dbf;
        border: 1px solid #001aff;
    }
    
    .teams {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .align {
        display: flex;
        gap: 0.8rem;
        align-items: center;
    }
    
    .copy {
        display: flex;
        justify-content: space-between;
        padding: 2rem 0;
        animation: fade-in 1s;
        animation-fill-mode: forwards;
        animation-timing-function: ease-in-out;
        animation-delay: 1s;
        opacity: 0;
    }

    @media (max-width: 550px) {
		.copy {
			display: flex;
            flex-direction: column;
            gap: 1rem;
		}
	}
    
    .copy a {
        color: orange;
    }
</style>