<style is:global>

    .equipe {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .logo {
        width: var(--logo-width, 5rem);
        aspect-ratio: 1/1.2;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        padding: 1rem;
        clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
        overflow: hidden;
    }

    .logo-ring {
        background-repeat: no-repeat;
        background-position: center;
        background-size: 100%;
        position: absolute;
        width: 100%;
        height: 100%;
        filter: blur(0.1rem);
    }

    .logo img {
        clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
        width: 90%;
        height: 90%;
        object-fit: contain;
        aspect-ratio: 1/1;
        padding: 0.2rem;
    }

    .Fogo .logo-ring {
        background-image: url("/images/elemento/fogo.svg");
    }
    
    .Agua .logo-ring {
        background-image: url("/images/elemento/agua.svg");
    }
    
    .Terra .logo-ring {
        background-image: url("/images/elemento/terra.svg");
    }
    
    .Ar .logo-ring {
        background-image: url("/images/elemento/ar.svg");
    }

    .ouro .logo-ring, .prata .logo-ring, .bronze .logo-ring {
        width: 90%;
        height: 90%;
    }

    @media (max-width: 550px) {
        .outros .logo {
            position: relative;
            right: 0;
            top: auto;
            bottom: auto;
        }
    }
</style>

<div class="logo">
    <div class="logo-ring"></div>
    <img :src="equipe.Logo[0]?.url" x-show="equipe.Logo[0]?.url" alt="">
</div>